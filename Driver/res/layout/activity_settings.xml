<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:splitMotionEvents="false" >

    <Button
        android:id="@+id/btn_save_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linear_bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/save_btn"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:background="@drawable/save_btn" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/cancel_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_bottom"
        android:layout_alignLeft="@+id/btn_save_false"
        android:layout_alignRight="@+id/btn_save_false"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_marginBottom="20dip"
        android:gravity="center"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/first_name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textColorHint="@color/water_mark"
            android:textSize="@dimen/setting_text_size"
            customviews:fontName="HELSH__.TTF" />

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/last_name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textColorHint="@color/water_mark"
            android:textSize="@dimen/setting_text_size"
            customviews:fontName="HELSH__.TTF" />

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/email_address"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textColorHint="@color/water_mark"
            android:textSize="@dimen/setting_text_size"
            customviews:fontName="HELSH__.TTF" />

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/mobile_no"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textColorHint="@color/water_mark"
            android:textSize="@dimen/setting_text_size"
            customviews:fontName="HELSH__.TTF" />

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_taxi_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/taxi_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:visibility="invisible"
            customviews:fontName="HELSH__.TTF" />

        <com.netcabs.customviews.NetCabsEditText
            android:id="@+id/ed_txt_vehicle_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/name_holdar"
            android:ems="10"
            android:hint="@string/vehicle_class"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/setting_input_field_padding"
            android:paddingRight="@dimen/setting_input_field_padding"
            android:singleLine="true"
            android:visibility="invisible"
            customviews:fontName="HELSH__.TTF" />
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout2"
        android:background="@drawable/validations_logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_bottom"
        android:layout_alignRight="@+id/linear_bottom"
        android:layout_marginBottom="20dp"
        android:background="@drawable/validations_holdar"
        android:gravity="center"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/validations_logo"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:splitMotionEvents="false" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <ImageView
                    android:id="@+id/img_view_driver_authority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/driver_licence_img"
                    android:scaleType="centerCrop" />

                <com.netcabs.customviews.NetCabsTextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:text="Driver&apos;s ID / Authority"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/past_trips_text_size"
                    customviews:fontName="HELSH__.TTF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <ImageView
                    android:id="@+id/img_view_driver_licence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/driver_licence_img"
                    android:scaleType="centerCrop" />

                <com.netcabs.customviews.NetCabsTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:text="Driver&apos;s Licence"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/past_trips_text_size"
                    customviews:fontName="HELSH__.TTF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.netcabs.customviews.NetCabsTextView
        android:id="@+id/txt_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:text="Settings"
        android:textColor="@color/black_color"
        android:textSize="@dimen/title_text_size"
        customviews:fontName="HELSH__.TTF" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dot_line" />

</RelativeLayout>