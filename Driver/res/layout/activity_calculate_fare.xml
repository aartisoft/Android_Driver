<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:splitMotionEvents="false" >

    <Button
        android:id="@+id/btn_okey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:background="@drawable/trip_fare_ok_btn" />

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trip_fare_logo_bar" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_okey"
        android:layout_below="@+id/relative_top"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.netcabs.customviews.NetCabsTextView
                android:id="@+id/txt_view_calculate_trip_fare_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trip_fare_text_holdar"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/setting_text_size"
                customviews:fontName="HELSH__.TTF" />

            <com.netcabs.customviews.NetCabsTextView
                android:id="@+id/txt_view_calculate_trip_fare_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/trip_fare_text_holdar"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/setting_text_size"
                customviews:fontName="HELSH__.TTF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.netcabs.customviews.NetCabsTextView
                android:id="@+id/txt_view_calculate_trip_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/trip_fare_text_holdar"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/setting_text_size"
                customviews:fontName="HELSH__.TTF" />

            <com.netcabs.customviews.NetCabsTextView
                android:id="@+id/txt_view_calculate_trip_fare_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/trip_fare_text_holdar"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/setting_text_size"
                customviews:fontName="HELSH__.TTF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>