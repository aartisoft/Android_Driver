<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:splitMotionEvents="false" >

    <com.netcabs.customviews.CustomAutoCompleteView
        android:id="@+id/ed_txt_pickup_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:background="@drawable/distination_holdar"
        android:completionThreshold="1"
        android:dropDownVerticalOffset="1dp"
        android:ems="10"
        android:hint="Enter Destination Location"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="5dip"
        android:textColor="@color/black_color"
        android:textColorHint="@color/water_mark"
        android:textSize="@dimen/past_trips_text_size" >

        <requestFocus />
    </com.netcabs.customviews.CustomAutoCompleteView>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/back" />

</RelativeLayout>