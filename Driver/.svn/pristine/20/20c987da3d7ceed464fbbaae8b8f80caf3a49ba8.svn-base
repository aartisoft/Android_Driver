<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <WebView
        android:id="@+id/web_view_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="@dimen/popup_text_size" />

        <com.netcabs.customviews.NetCabsTextView
            android:id="@+id/txt_view_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:text="0 km"
            android:textColor="@color/obd_reading_color"
            android:textSize="80sp"
            customviews:fontName="digital-7.ttf" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textSize="@dimen/popup_text_size" />

        <com.netcabs.customviews.NetCabsTextView
            android:id="@+id/txt_view_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:text="0 M/H"
            android:textColor="@color/obd_reading_color"
            android:textSize="80sp"
            customviews:fontName="digital-7.ttf" />
    </LinearLayout>

</LinearLayout>