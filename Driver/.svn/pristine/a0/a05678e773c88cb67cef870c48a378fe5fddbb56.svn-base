<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loging_bg"
    android:splitMotionEvents="false" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/oiii_logo" />

    <Button
        android:id="@+id/btn_finger_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1.0"
        android:background="@drawable/login_selector"
        android:clickable="true" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_finger_print"
        android:layout_marginRight="139dp"
        android:text="Setting" />

    <TextView
        android:id="@+id/txt_view_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_settings"
        android:layout_below="@+id/btn_settings"
        android:layout_marginTop="5dp"
        android:text="Not connected"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/txt_view_mph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_view_connection_status"
        android:layout_alignRight="@+id/txt_view_connection_status"
        android:layout_below="@+id/txt_view_connection_status"
        android:layout_marginTop="10dp"
        android:text="MPH"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/txt_view_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_view_mph"
        android:layout_alignRight="@+id/txt_view_mph"
        android:layout_below="@+id/txt_view_mph"
        android:layout_marginTop="10dp"
        android:text="Distance"
        android:textColor="@color/black_color" />

</RelativeLayout>